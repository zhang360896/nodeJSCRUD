    script(type="text/javascript").
        function delUser(userId){
            alert(userId);
            $.ajax({
                type : "POST",
                url : "/crud/delUser",
                data : {
                    "userId" : userId
                },
                dataType : "JSONP",
                success : function(data) {
                    alert('succeed');
                }
            })
            window.location.reload(true);
        }
